	private static final String[] prefixesArray = {"PREFIX bbcevent:<http://www.bbc.co.uk/ontologies/event/>",
														"PREFIX geo-pos:<http://www.w3.org/2003/01/geo/wgs84_pos#>",
														"PREFIX bbc:<http://www.bbc.co.uk/ontologies/bbc/>",
