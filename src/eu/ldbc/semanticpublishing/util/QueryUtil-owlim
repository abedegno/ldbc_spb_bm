														"PREFIX fb:<http://rdf.freebase.com/ns/>",
														"PREFIX dcterms:<http://purl.org/dc/terms/>",
														"PREFIX cwork:<http://www.bbc.co.uk/ontologies/creativework/>" ,
														"PREFIX ldbc:<http://www.ldbc.eu/ontologies/sempub#>"
													};

	public static final HashMap<String, String> prefixesMap = new HashMap<String, String>();
	
	static {
		initializeMap();
	}
	
	public static String buildPrefixesString(boolean humanReadable) {

		StringBuilder sb = new StringBuilder();
		
		for (int i = 0; i < prefixesArray.length; i++) {
			sb.append(prefixesArray[i]);
			sb.append(" ");
			if (humanReadable) {
				sb.append("\n");
			}			
		}
		
		return sb.toString();
	}
	
	private static void initializeMap() {
		String s;
		String prefix;
		String uri;
		for (int i = 0; i < prefixesArray.length; i++) {
			s = prefixesArray[i];
			prefix = s.substring(s.indexOf("PREFIX ") + "PREFIX ".length(), s.indexOf(":"));
			uri = s.substring(s.indexOf(":") + 1);
			prefixesMap.put(prefix, uri);
		}
	}
	
	public static String getUriForPrefix(String qname) {
		return prefixesMap.get(qname);
	}
	
	public static int getPrefixesCount() {
		return prefixesArray.length;
	}
}
